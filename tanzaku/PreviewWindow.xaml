<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="tanzaku.PreviewWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="短冊　プレビュー"
	Height="600"
	Width="250"
WindowStartupLocation="CenterScreen">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition
				Height="490" />
			<RowDefinition
				Height="30" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition
				Width="*" />
			<ColumnDefinition
				Width="200" />
			<ColumnDefinition
				Width="*" />
		</Grid.ColumnDefinitions>
		<Canvas
			Grid.Row="0"
			Grid.Column="1"
			Name="canvas">
			<TextBlock
				Name="nagaigoto"
				HorizontalAlignment="Center"
				TextWrapping="Wrap"
				FlowDirection="RightToLeft"
				TextAlignment="Center"
				Canvas.Top="0"
				Canvas.Left="0"
				FontSize="45"
				Height="490"
				Width="200"
				FontFamily="HGSGothicE"
				VerticalAlignment="Center"></TextBlock>
		</Canvas>
		<Button
			Grid.Row="1"
			Grid.Column="1"
			Name="save"
			Content="これでほぞん!"
			FontSize="20"
			HorizontalAlignment="Center"
			Click="save_Click" />
	</Grid>
</Window>