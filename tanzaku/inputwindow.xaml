<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="tanzaku.inputwindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="ねがいごとはなにかな？"
	Height="160"
	Width="500"
	WindowStartupLocation="CenterScreen">
	<Grid
		Name="testgrid">
		<Grid.RowDefinitions>
			<RowDefinition
				Height="90" />
			<RowDefinition
				Height="30" />
			<RowDefinition
				Height="*" />
		</Grid.RowDefinitions>
		<TextBox
			MouseDoubleClick="Textbox_MouseDoubleClick"
			Grid.Row="0"
			FontSize="30"
			Name="textbox" />
		<Button
			Grid.Row="1"
			Name="OK"
			Content="OK"
			FontSize="15"
			HorizontalAlignment="Center"
			Click="OK_Click" />
	</Grid>
</Window>